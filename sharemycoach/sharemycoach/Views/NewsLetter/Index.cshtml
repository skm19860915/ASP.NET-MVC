<!--NewsLetter View-->
@using CaptchaMvc.HtmlHelpers;
<link href="~/Content/css/home.css" rel="stylesheet" />
<div class="row">
    <div class="row pre-header">
        <hr class="hidden-xs" style="border:1px solid #eeeeee; margin-bottom:20px; margin-top:-10px;" />
        <div class="row">
            <div class="col-md-1 col-sm-1 col-xs-1"></div>
            <div class="col-md-10 col-sm-10 col-xs-10" style="text-align:center;">
                <br />
                <br />
                <br />
                <span style="color:black; font-weight:normal;">Sign up for our email list by filling out the form below.</span>
                <br />
                <br />
                <br />
            </div>
            <div class="col-md-1 col-sm-1 col-xs-1"></div>
        </div>
        <div class="row">
            <div class="col-md-1 col-sm-1 col-xs-1"></div>
            <div class="col-md-10 col-sm-10 col-xs-10" style="border:1px solid">
                <div class="row" style="background-color: #4B4B4B;">
                    <div class="col-md-12">
                        <h1 style="font-size:20px; margin-top:10px;">Newsletter Sign-up</h1>
                    </div>
                </div>
                <div class="row" style="background-color:#cccccc; padding-bottom:5px; padding-top:5px;">
                    <div class="col-md-3">
                        <label class="custom-lbl">First Name :&nbsp;&nbsp;</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control form-custom">
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row" style="background-color:#cccccc; padding-bottom:5px; padding-top:5px;">
                    <div class="col-md-3">
                        <label class="custom-lbl">Last Name :&nbsp;&nbsp;</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control form-custom">
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row" style="background-color:#cccccc; padding-bottom:5px; padding-top:5px;">
                    <div class="col-md-3">
                        <label class="custom-lbl">Email Address :&nbsp;&nbsp;</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control form-custom">
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row" style="background-color:#cccccc; padding-bottom:5px; padding-top:5px;">
                    <div class="col-md-3">
                        <label class="custom-lbl">Human Verification :&nbsp;&nbsp; </label>
                    </div>
                    <div class="col-md-6">
                        @Html.Captcha(5)
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="row" style="background-color:#cccccc; padding-bottom:5px; padding-top:5px;">
                    <div class="col-md-5">
                    </div>
                    <div class="col-md-3">
                        <input type="button" value="Sign Me Up" />
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
            <div class="col-md-1 col-sm-1 col-xs-1"></div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
    </div>

    <!--START video range-->
    @Html.Partial("~/Views/Shared/_VideoSection.cshtml")
    <!--END video range-->
</div>
